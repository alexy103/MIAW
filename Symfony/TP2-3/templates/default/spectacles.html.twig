{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <table>
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Lieu</th>
            </tr>
            </thead>
            <tbody>
            {% for spectacle in spectacles %}
                <tr>
                    <td>{{ spectacle.nom }}</td>
                    <td>{{ spectacle.description }}</td>
                    <td><a href="{{ path('app_spectacle', {'id': spectacle.id}) }}"><img src="{{ asset(spectacle.image) }}" alt="Image"></a></td>
                    <td>{{ spectacle.lieu.nom }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
